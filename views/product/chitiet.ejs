<%- include('../layout/header') %>

      <div class="container " style="margin-top: 80px; min-height: 700px; padding-top: 50px;">
     
            <div class="container py-5 justify-content-center shadow-lg p-3 mb-5 bg-white rounded">
              <div class="row justify-content-center">
                  <img src="/<%= objProduct.image %>"
                    class="card-img-top"  style="width: 750px; height: 300px;"/>
                  <div class="card-body">
                    <div class="text-center mt-3">
                      <h3 class="card-title"><%= objProduct.name %></h3>
                    </div>
                    <div>
                      <div class="d-flex justify-content-center mt-2">
                         <span style="font-size: 20px; font-weight: bold;">Loại:</span>
                                 
                              <option style="font-size: 20px;margin-left: 10px;"><%= namecategory.name %></option>
                                    
                      </div>

                      <div class="d-flex mt-2 justify-content-center p-2">
                        <span class="text-body" style="margin-right: 10px;font-size: 20px; font-weight: bold;">Nội dung:  </span> <br>
                        <span style="font-size: 20px;"><%= objProduct.content %> </span>
                      </div>
                    </div>
                    <div class="d-flex justify-content-center mt-4 text-center" >
                      <p style="font-size: 20px;font-weight: bold;">Total: </p>
                      <p class="text-danger text-center" style="margin-left: 10px;text-align: center; font-size: 20px;"><%=objProduct.price%> VNĐ</p>
                    </div>
                  </div>
                
          

              </div>
            </div>

      </div>
          

