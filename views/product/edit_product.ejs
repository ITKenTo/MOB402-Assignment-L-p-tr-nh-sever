<%- include('../layout/header') %>

    <div class="container shadow-lg p-3 mb-5 bg-white rounded" style="margin-top: 150px; min-height: 700px;">
        <div class="row">
            <div class="col-12" style="text-align: center">
                <h2>Edit Product</h2>
            </div>
            <div class="col-12">

                <form action="" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="Fullname" class="col-form-label">Tên Sản Phẩm:</label>
                        <input type="text" class="form-control" name="name" value="<%= objProduct.name  %>" required>
                    </div>

                    <div class="mb-3 mt-4 ml-2 row">
                            <div class="ml-2"> 
                               <select class="form-select" aria-label="Default select example" name="id_categoy">
                                <option selected>Loại Sản Phẩm</option>
                                <% listCategory.forEach((row)=> {
                                    let selected = '';// xác định thể loại đã chọn của sp
                                    if(String( row._id ) == String(objProduct.id_category) ){
                                    selected = ' selected ';
                                    }
                                    %>

                                    <option  <%= selected %> value="<%= row.id%>">
                                        <%= row.name%>
                                    </option>
                                     <%   } ) %>
                            </select>
                            </div>
                           
                     
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Nội dung:</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                            name="content"><%=objProduct.content %></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="number" class="col-form-label">Giá tiền:</label>
                        <input type="number" class="form-control" id="giatien" name="price"
                            value="<%= objProduct.price  %>" required>
                    </div>

                    <div class="mb-3">
                        <label for="formFile" class="form-label">Image:</label>
                        <input class="form-control" type="file" id="formFile" name="image">
                        <img src="/<%= objProduct.image%>" srcset="" width="100" style="margin-top: 10px; height: 70px;">
                    </div>
               <input type="hidden" name="old_image" value="<%= objProduct.image%>">
                    <div class="d-grid gap-2 col-3 mx-auto mt-5" style="width: fit-content;">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>

            </div>
        </div>

    </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
        integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"
        integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD"
        crossorigin="anonymous"></script>
