<%- include('../layout/header') %>

  <div class="container" style="min-height: 700px; margin-top: 100px; ">

    <div class="row">

      <div class="col-10">
        <h4>Category</h4>

      </div>

      <div class="col-2 d-flex mb-2 ">
        <a type="button" class="btn btn-info" href="/product/addcategory">Thêm Loại</a>
      </div>
    </div>

    <div class="table-responsive shadow-lg p-3 mb-5 bg-white rounded">
      <table class="table caption-top table-hover table-bordered " id="example" width="100%" cellspacing="0">
        <caption>List of Category</caption>
        <thead>
          <tr class="table-dark">
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tfoot class="table-dark">
          <th scope="col">Id</th>
          <th scope="col">Name</th>
          <th scope="col">Action</th>
        </tfoot>

        <tbody>
          <% listcategory.forEach((row,index)=> { %>
            <tr>
              <th scope="row">
                <%= index %>
              </th>
              <td>
                <%= row.name %>
              </td>
              <td>
                <a href="/product/editCategory/<%= row.id  %>" class="text-success"><i
                    class="fas fa-edit fa-lg mx-1"></i></a>

                <!-- <a href="/product/deletecategory/<%= row.id  %>" class="text-danger"><i
                    class="fas fa-trash fa-lg mx-1"></i></a> -->
                <a href="" data-id="<%= row.id  %>" data-bs-toggle="modal" data-bs-target="#DeleteModal" class="text-danger"><i
                    class="fas fa-trash fa-lg mx-1"></i></a>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>


    <!-- <div class="modal-dialog modal-dialog-scrollable">

            <section style="background-color: #eee;">
                <div class="container py-5">
                   
            </section>
        </div> -->


    <!-- ------------------------------------ modal xóa  -->
    <div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
            <button class="close" type="button" data-bs-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">x</span>
            </button>
          </div>
          <div class="modal-body">Are you sure you want to delete your?</div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <a id="btn_delete" class="btn btn-primary">Yes</a>
          </div>
        </div>
      </div>
    </div>
    <!------------------------->
   <form name="delete-category" action=""></form>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
    integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"
