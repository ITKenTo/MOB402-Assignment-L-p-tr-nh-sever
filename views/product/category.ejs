    crossorigin="anonymous"></script>
  <!---------Datable------------>
  <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
  <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
  <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

  <script>
    $(document).ready(function () {
      $('#example').DataTable();
    });
  </script>
  <script>
 document.addEventListener('DOMContentLoaded', function () {

      var productId;
      var deleteForm= document.forms['delete-category'];
        var btn_deletecategory= document.getElementById('btn_delete');

      const exampleModal = document.getElementById('DeleteModal');
      exampleModal.addEventListener('show.bs.modal', event => {
        const button = event.relatedTarget
        Id=button.getAttribute('data-id');
      });
    
        btn_deletecategory.onclick = function(){
       
          deleteForm.action='/product/deletecategory/'+Id +'?_method=DELETE';
          deleteForm.submit();

        }
    });
  </script>

