<%- include('../layout/header') %>

    <div class="container" style="min-height: 700px;">
        <div class="container rounded bg-white mb-5" style="margin-top: 100px;">
            <div class="row">
                <div class="col-md-3 border-right">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img
                            class="rounded-circle mt-5" width="150px" height="200px"
                            src="/<%= obj.image  %>"><span
                            class="font-weight-bold"><%= obj.fullname  %></span><span
                            class="text-black-50"><%= obj.email  %></span><span> </span></div>
                </div>
                <div class="col-md-5 border-right">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right">Profile Settings</h4>
                        </div>
                        <div class="row mt-3 ">

                            <fieldset disabled>
                                <div class="col-md-12 mb-4"><label class="labels">Username</label>
                                    <input type="text" class="form-control" placeholder="Username" value="<%= obj.username  %>">
                                </div>
                                <div class="col-md-12 mb-4"><label class="labels">Name</label><input type="text"
                                        class="form-control" placeholder="Name" value="<%= obj.fullname  %>"></div>
                                <div class="col-md-12 mb-4"><label class="labels">Email</label><input type="text"
                                        class="form-control" placeholder="Email" value="<%= obj.email  %>"></div>
                                <!-- <div class="col-md-12 mb-4"><label class="labels">Phone</label><input type="text"
                                        class="form-control" placeholder="Phone" value=""></div> -->
                                <!-- <div class="col-md-12 mb-4"><label class="labels">Password</label><input type="password"
                                        class="form-control" placeholder="Password" value="<%= obj.password  %>"></div> -->

                                <div class="col-md-12 mb-4"><label class="labels">Manage</label><input type="text"
                                        class="form-control" placeholder="Manage" value="<%= obj.manage  %>"></div>
                            </fieldset>
                        </div>
                        <a href="/users/edit_user/<%= obj._id  %>" class="text-success"><i class="fas fa-edit fa-lg mx-1 mt-3"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
            integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"
            integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD"
            crossorigin="anonymous"></script>
            
    <%- include('../layout/footer') %>
